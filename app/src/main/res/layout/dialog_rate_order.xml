<!--        android:id="@+id/btnSubmitRating"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Submit"-->
<!--        android:backgroundTint="@color/primary_color"-->
<!--        android:textColor="@android:color/white" />-->
</LinearLayout>