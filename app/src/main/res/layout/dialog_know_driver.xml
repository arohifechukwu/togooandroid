<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Driver Profile Picture -->
        <ImageView
            android:id="@+id/driverImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account2"
            android:background="@drawable/ic_circle_background" />

        <!-- Driver Name -->
        <TextView
            android:id="@+id/driverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <!-- Driver Phone -->
        <TextView
            android:id="@+id/driverPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: 123-456-7890"
            android:layout_marginBottom="12dp" />

        <!-- Car Image -->
        <ImageView
            android:id="@+id/carImage"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_car_placeholder"
            android:background="@android:color/darker_gray" />

        <!-- Car Type -->
        <TextView
            android:id="@+id/carType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Type: Sedan"
            android:layout_marginBottom="4dp" />

        <!-- Car Model -->
        <TextView
            android:id="@+id/carModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model: Toyota Corolla"
            android:layout_marginBottom="4dp" />

        <!-- License Plate -->
        <TextView
            android:id="@+id/licensePlate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="License Plate: ABC-123"
            android:layout_marginBottom="8dp" />

        <!-- Estimated Time -->
        <TextView
            android:id="@+id/estimatedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETA: 30 mins"
            android:textStyle="italic" />
    </LinearLayout>
</ScrollView>