<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    app:strokeColor="@color/primary_variant"
    app:strokeWidth="1dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/white">

        <!-- User Name -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <!-- User Email -->
        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14sp"
            android:textColor="@color/dark_gray" />

        <!-- User Status -->
        <TextView
            android:id="@+id/userStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Active"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@color/primary_variant"
            android:layout_marginTop="4dp"/>

        <!-- Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="10dp">

            <!-- Suspend Button -->
            <Button
                android:id="@+id/suspendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suspend"
                android:textSize="14sp"
                android:backgroundTint="@color/button_disabled"
                android:padding="8dp"
                android:visibility="visible"
                android:layout_marginEnd="8dp"/>

            <!-- Reactivate Button (Hidden by Default) -->
            <Button
                android:id="@+id/reactivateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reactivate"
                android:textSize="14sp"
                android:backgroundTint="@color/primary_color"
                android:padding="8dp"
                android:visibility="gone"
                android:layout_marginEnd="8dp"/>

            <!-- Delete Button -->
            <Button
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textSize="14sp"
                android:backgroundTint="@color/primary_variant"
                android:padding="8dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>